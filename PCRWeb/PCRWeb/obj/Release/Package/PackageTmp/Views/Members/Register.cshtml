@model PCRWeb.ViewModels.MembersRegisterViewModel

@{
    ViewBag.Title = "註冊";
}
@*匯入驗證用所須的JavaScript*@
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<body background="~/Images/競技場.png" style="background-size: cover; margin: 0; ">
</body>

<h2>註冊</h2>
@*建立註冊會員所須的表單*@
@using (Html.BeginForm("Register", "Members"))
{
    @Html.ValidationSummary(true)
    @*建立註冊帳號資料內容所使用的表格*@
    <table>
        <tr>
            <td>
                @Html.LabelFor(model => model.newMember.Account)
            </td>
            <td>
                @Html.TextBoxFor(model => model.newMember.Account)
                @Html.ValidationMessageFor(model => model.newMember.Account)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Password)
            </td>
            <td>
                @Html.PasswordFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.PasswordCheck)
            </td>
            <td>
                @Html.PasswordFor(model => model.PasswordCheck)
                @Html.ValidationMessageFor(model => model.PasswordCheck)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="註冊" style="background: rgba(255,255,255,0.5);"/>
            </td>
        </tr>
    </table>
}